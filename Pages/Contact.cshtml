<!-- ABOUT US -->
<div class="row-aubout-us">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="themesflat-spacer clearfix" data-desktop="0" data-mobile="0" data-smobile="0"></div>
            </div><!-- /.col-md-12 -->
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="themesflat-headings our-team style-2 text-center wow fadeInUp clearfix">
                </div>
                <div class="themesflat-spacer clearfix" data-desktop="55" data-mobile="35" data-smobile="35"></div>
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-md-12 mb-3">
                <div class="project-detail-content">
                    <div class="heading">

                        <div class="top-information">
                            <div class="project-infor">
                                <h3 class="text-white">
                                    Renewable Energy Systems Ltd.
                                </h3>
                                <p>
                                    Plot No.D-13, Phase-V
                                    I.D.A. Jeedimetla<br />
                                    Hyderabad-500055,
                                    Telangana, India.
                                </p>
                            </div>
                            <div class="category">
                                <h3 class="text-white">CONTACT</h3>
                                <p>
                                    040-42616355

                                </p>
                            </div>
                            <div class="date">
                                <h3 class="text-white">Email</h3>
                                <p>info@resindia.co.in</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-5" style="margin-top: 1%">
            <div class="col-md-12 mb-5">
                <div class="card blue-light-bg">
                    <div class="card-header bg-primary text-white"><strong>For Sales Enquiry</strong></div>
                    <div class="card-body p-4">

                        @using (Html.BeginForm(FormMethod.Post, new { id = "frmSales" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()

                            <input type="hidden" value="1" asp-for="SaleModel!.FormId" />
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <input placeholder="Name" asp-for="SaleModel!.Name" />
                                    <span asp-validation-for="SaleModel.Name"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <input placeholder="Email Id" asp-for="SaleModel!.Email" />
                                    <span asp-validation-for="SaleModel.Email"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <input placeholder="Phone No." asp-for="SaleModel!.PhoneNo" />
                                    <span asp-validation-for="SaleModel.PhoneNo"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <input placeholder="Sales Query" asp-for="SaleModel!.Message" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-submit">
                                        <div class="send">
                                            <button class="message-submit" asp-page-handler="Sales" type="submit">Send Message</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                </div>

            </div>
            <div class="col-md-12 mb-3">
                <div class="card blue-light-bg">
                    <div class="card-header bg-primary text-white"><strong>For Queries</strong></div>
                    <div class="card-body p-4">

                        @using (Html.BeginForm(FormMethod.Post, new { id = "frmQuery" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()
                            <input type="hidden" value="1" asp-for="QueryModel!.FormId" />
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <input placeholder="Name" asp-for="QueryModel!.Name" />
                                    <span asp-validation-for="QueryModel.Name"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <input placeholder="Email Id" asp-for="QueryModel!.Email" />
                                    <span asp-validation-for="QueryModel.Email"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <input placeholder="Phone No." asp-for="QueryModel!.PhoneNo" />
                                    <span asp-validation-for="QueryModel.PhoneNo"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <input placeholder="Query" asp-for="QueryModel!.Message" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-submit">
                                        <div class="send">
                                            <button class="message-submit" asp-page-handler="Query" type="submit">Send Message</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }



                    </div>
                </div>

            </div>

        </div>






        <div class="themesflat-spacer clearfix" data-desktop="55" data-mobile="35" data-smobile="35"></div>



    </div>
</div>
<!-- END ABOUT US -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}