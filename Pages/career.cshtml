<!-- ABOUT US -->
<div class="row-aubout-us">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="themesflat-spacer clearfix" data-desktop="60" data-mobile="60" data-smobile="60"></div>
			</div><!-- /.col-md-12 -->
		</div>

		<div class="row">
			<div class="col-md-12">
				<div class="themesflat-headings our-team style-2 text-center wow fadeInUp clearfix">
					<h2 class="">Work With Us</h2>

				</div>
				<div class="themesflat-spacer clearfix" data-desktop="55" data-mobile="35" data-smobile="35"></div>
			</div>
		</div>

		<div class="card blue-light-bg">
			<div class="card-body p-4">
				<div class="row">
					<div class="col-md-6 mb-3">
						<select>
							<option>Planning</option>							
							<option>Quality</option>
							<option>Design and development</option>
							<option>Marketing</option>
							<option>Purchase</option>
							<option>Store Finance</option>
							<option>Technician</option>

						</select>

					</div>
					<div class="col-md-6 mb-3">
						<input type="file" id="myFile" name="filename" placeholder="Upload CV" style="padding: 5px 20px;">
					</div>
				</div>
				<div class="row">
					<div class="col-md-4 mb-3">
						<input type="text" placeholder="Name">
					</div>
					<div class="col-md-4 mb-3">
						<input type="text" placeholder="Email ID">
					</div>
					<div class="col-md-4 mb-3">
						<input type="text" placeholder="Phone No.">
					</div>

				</div>
				<div class="row">
					<div class="col-md-4 mb-3">
						<input type="text" placeholder="Work Experience">
					</div>
					<div class="col-md-4 mb-3">
						<input type="text" placeholder="Education">
					</div>
					<div class="col-md-4 mb-3">
						<input type="text" placeholder="Project (if required for the position)">
					</div>


				</div>
				<div class="row">
					<div class="col-md-4 mb-3">
						<input type="text" placeholder="Reference">
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<div class="form-submit">

							<div class="send">
								<button class="message-submit" type="submit">Send Application</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>



		<div class="themesflat-spacer clearfix" data-desktop="55" data-mobile="35" data-smobile="35"></div>



	</div>
</div>
<!-- END ABOUT US -->