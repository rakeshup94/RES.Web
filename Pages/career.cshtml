<!-- ABOUT US -->
<div class="row-aubout-us">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="themesflat-spacer clearfix" data-desktop="60" data-mobile="30" data-smobile="30"></div>
            </div><!-- /.col-md-12 -->
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="themesflat-headings our-team style-2 text-center wow fadeInUp clearfix">
                    <h2 class="">Work With Us</h2>

                </div>
                <div class="themesflat-spacer clearfix" data-desktop="55" data-mobile="35" data-smobile="35"></div>
            </div>
        </div>

        <div class="card blue-light-bg">
            @using (Html.BeginForm(FormMethod.Post, new { id = "frmCandidate", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @*@Html.ValidationSummary()*@
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>&nbsp;</label>
                            <select asp-for="CandidateModel!.Department">
                                <option>Planning</option>
                                <option>Quality</option>
                                <option>Design and development</option>
                                <option>Marketing</option>
                                <option>Purchase</option>
                                <option>Store Finance</option>
                                <option>Technician</option>
                            </select>
                            <span asp-validation-for="CandidateModel.Department"></span>

                        </div>
                        <div class="col-md-6 mb-3">
                           <label>Upload CV</label>

                            <input asp-for="CandidateModel!.Resume" placeholder="Upload CV" style="padding: 5px 20px;">


                            <span asp-validation-for="CandidateModel.Resume"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <input placeholder="Name" asp-for="CandidateModel!.Name" />
                            <span asp-validation-for="CandidateModel.Name"></span>

                        </div>
                        <div class="col-md-4 mb-3">
                            <input placeholder="Email Id" asp-for="CandidateModel!.Email" />
                            <span asp-validation-for="CandidateModel.Email"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input placeholder="PhoneNo" asp-for="CandidateModel!.PhoneNo" />
                            <span asp-validation-for="CandidateModel.PhoneNo"></span>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <input placeholder="Work Experience" asp-for="CandidateModel!.Experience" />
                            <span asp-validation-for="CandidateModel.Experience"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input placeholder="Education" asp-for="CandidateModel!.Education" />
                            <span asp-validation-for="CandidateModel.Education"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input placeholder="Project (if required for the position)" asp-for="CandidateModel!.Project" />
                            <span asp-validation-for="CandidateModel.Project"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <input placeholder="Reference" asp-for="CandidateModel!.Reference" />
                            <span asp-validation-for="CandidateModel.Reference"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-submit">
                                <div class="send">
                                    <button class="message-submit" type="submit">Send Application</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>



        <div class="themesflat-spacer clearfix" data-desktop="55" data-mobile="35" data-smobile="35"></div>



    </div>
</div>

<!-- END ABOUT US -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}